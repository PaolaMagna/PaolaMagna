{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": [
            "es2020"
        ],
        "declaration": true,
        "removeComments": false,
        "esModuleInterop": true,
        "stripInternal": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": false,
        "outDir": "build"
    },
    "include": [
        "./src/*.ts"
    ]
}